<h3><center>***CHANGE YOUR PASSWORD***</center></h3>

<table align="center">

<%=form_for [@adminst],:url=>{:controller=>"products",:action=>"new_account_process"} do |i| %>

<tr>
  <td><%= i.text_field :username,:placeholder=>"Username",:required=>true %></td>
</tr>

<tr>
  <td><%= i.password_field :oldpass,:placeholder=>"OldPassword",:required=>true %></td>
</tr>

<tr>
  <td><%= i.text_field :newpass,:placeholder=>"NewPassword",:required=>true %></td>
</tr>

<table align="center">
  <tr>
    <td><%= i.submit "Submit"%></td>
  </tr>
</center>

<%end%>

</table>
